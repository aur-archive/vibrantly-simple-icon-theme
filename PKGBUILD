# PKGBUILD for Vibrantly Simple Icon Theme
#

pkgname=vibrantly-simple-icon-theme
pkgdesc="Vibrantly Simple Colors attempts to be a modern continuation of the humanity icon theme, while still keeping humanity's simplicity."
pkgver=1.1
pkgrel=3
arch=('any')
url="http://gnome-look.org/content/show.php/Vibrantly+Simple?content=167864"
license=('CC SA')
optdepends=()
source=('http://download1579.mediafire.com/8d30tbqzbteg/uur1fs36sznuccp/Vibrantly-Simple-1-1b-GTK-Icon-Theme.tar.gz')
md5sums=('SKIP')

package() {

  install -d -m 755 "$pkgdir"/usr/share/icons/
  cp -r . "$pkgdir"/usr/share/icons/

}
